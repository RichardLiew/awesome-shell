###############################################################################

source "$(cd "$(dirname "$0")"; pwd)/../macros/macros.slib"

###############################################################################

SET_SHELL_LIBRARIES_PATH ".."
SET_SHUNITTEST_HOME "../shunit2/source/2.1/src"

###############################################################################

source "${SHELL_LIBRARIES_PATH}/globals/cores.slib" 2>&1 >/dev/null

###############################################################################

set -e

###############################################################################

__VERSION__='
    VERSION 1.0, Copyright (C) 2017 Zichoole Inc.
'

__WARNING__='
    Need bash version 4.1.x above!
'

__INTRO__='
    Do some system settings, and deploy some installs.
'

__USAGE__='
    Usage:
        print-colors -P
    or
        print-colors -p \
            "front_color:back_color|sequence:group_counts-lower_color:upper_color"
'

###############################################################################

function main() {
    preprocess "$@"

    while getopts "${NECESSARY_OPTIONS}Pp:" opt; do
        case "${opt}" in
            P|p)
                print_colors "${OPTARG}"
                ;;
            *)
                process_necessary_options "${opt}"
                ;;
        esac
    done

    exit_success
}

###############################################################################

function custom_unsets() {
    BLANK_FUNCTION_BODY
}

###############################################################################

function readonly_variables() {
    BLANK_FUNCTION_BODY
}

function readonly_functions() {
    BLANK_FUNCTION_BODY
}

function readonlys() {
    RUN_FUNCTION "readonly_variables"
    RUN_FUNCTION "readonly_functions"
}

###############################################################################

RUN_FUNCTION "readonlys"

###############################################################################

main "$@"
